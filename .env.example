# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ticketagent
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ticket-agent?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# Generate a secure secret: openssl rand -base64 32

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
COOKIE_DOMAIN=localhost
# For production:
# FRONTEND_URL=https://yourdomain.com
# COOKIE_DOMAIN=yourdomain.com

# External APIs
API_FOOTBALL_KEY=your-api-football-key-here
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Redis (Optional - for production caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Email (Optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-email-password

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn-here

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
# SESSION_SECRET=your-session-secret-here
# SESSION_MAX_AGE=604800000

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Arena Tickets API
ARENA_CONSUMER_KEY=your-arena-consumer-key
ARENA_CONSUMER_SECRET=your-arena-consumer-secret
ARENA_API_URL=https://arenatickets.co.il/wp-json/wc/v3
